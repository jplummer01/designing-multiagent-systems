{
  "name": "PicoAgents Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "remoteEnv": {
    "WORKSPACE_ROOT": "${containerWorkspaceFolder}"
  },

  "forwardPorts": [8000, 8080],
  "portsAttributes": {
    "8000": {
      "label": "PicoAgents WebUI",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Development Server",
      "onAutoForward": "notify"
    }
  },

  "postAttachCommand": "echo 'ðŸš€ PicoAgents is ready! Run examples with: python examples/agents/basic-agent.py'",

  "remoteUser": "vscode"
}
